<!---- CSS OF SIGN IN PAGE -->
<style>

    *{
    font-family: 'Courier New', Courier, monospace;
}

body{
    min-height: 100vh;
  background-attachment: fixed;
  overflow: hidden;
}

.title{
    width: 150px;
    color: black;
    float: left;
    padding-top: 5px;
    padding-left: 20px;
    font-size: 20px ;
}

.logo{
    float: left;    
    padding-left: 20px;
}

/* SIGN IN */
.signup-page{
    box-shadow: 10px 10px;
    height: 400px;
    width: 600px;
    border-radius: 15px;
    background-image:linear-gradient(-225deg,#2CD8D5 0%, #C5C1FF 56%, #FFBAC3 100%);
    margin-left: auto;
    margin-right: auto;
}

#user{
    padding-top: 30px;
    line-height: 0px;
    margin-top: 10px;
}

#pass{
    line-height: 0px;
}

#re-pass{
    line-height: 0px;
}


.signup-page h1{
    text-align: center;
    padding-top: 10px;
    padding-bottom: 10px;
    border-bottom: 2px solid rgb(166, 166, 166);
    border-radius: 15px;
}

.create-account{
    text-align: center;
    width: 600px;
    border-radius: 15px;
    background-image:linear-gradient(to top, #9795f0 0%, #fbc8d4 100%);
    height: 60px;
    margin-left: auto;
    margin-right: auto;
    box-shadow: 7px 7px;
    top: 10%;
}

.create-account h1{
    padding-top: 5px;
}

form{
    padding-left: 30px;
}

.signup-page h4{
    font-size: 20px;
}

.signup-page input{
    width: 87%;
    height: 40px;
    border-radius: 15px;
    padding: 0 15px;
}

.signup-page button{
    margin-left: 210px;
    margin-top: 30px;
    margin-bottom: 15px;
    width: 20%;
    height: 40px;
    border-radius: 15px;
    background-color: rgb(166, 166, 166);
    transition: .4s;
    font-size: 15px;
    font-weight: bold;
}

button:hover{
	background-image: linear-gradient(-225deg, #7742B2 0%, #f180FF 52%, #FD8BD9 100%);
	border: 2px solid black;
	cursor: pointer;
    transform: scale(1.1);
}

.log-in{
    text-align: center;
    margin-top: 45px;
}

</style>